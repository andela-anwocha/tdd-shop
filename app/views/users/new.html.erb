<% if flash[:errors] %>
  <h3>Errors</h3>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, id: :name %>

  <%= f.label :email %>
  <%= f.email_field :email, id: :email %>

  <%= f.label :password %>
  <%= f.password_field :password, id: :password %>

  <%= f.submit "Sign Up" %>
<% end %>